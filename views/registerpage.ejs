<div class="login-page">
        <div class="form">
          <form class="register-form">
            <input type="text" placeholder="name"/>
            <input type="password" placeholder="password"/>
            <input type="text" placeholder="email address"/>
            <button>create</button>
            <p class="message">Already registered? <a href="#">Sign In</a></p>
            
          </form>
          <form method="POST" action="/users/register" class="login-form" enctype="multipart/form-data">
            <label>Name:</label>
            <input type="text" name="name" placeholder="Enter Name" required>
            <label>Username:</label>
            <input type="text" name="uname" placeholder="Enter Username" required><br>
            <label>Email:</label>
            <input type="email" name="email" placeholder="Enter Email" required><br>
            <label>Password:</label>
            <input type="password" name="pword" placeholder="Enter Password" required><br>
            <label>Confirm Password:</label>
            <input type="password" name="cpword" placeholder="Confirm  Password" required><br>
            
            
            <input style="background-color:#76b852" type="submit" class="btn btn-success" placeholder="Sign Up" value="Sign Up">
            <p class="message">Already a User?  <a href="/users/login">Login</a></p>
          </form>
            
    
          
        </div>
      </div>

      <script src=""https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js""></script>
</body>

