    <link rel="icon" type="image/x-icon" href="/icons/barns/favicon.ico">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"/>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!--link rel="stylesheet" href="/stylesheets/font-awesome.min.css"/-->
</head>

<body >

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">UPV Sales</a>
          </div>
      
          <ul class="nav navbar-nav navbar-right">
              
            <li><a href="/users/home"  style="font-weight: bold;"><span class="glyphicon glyphicon-shopping-cart"></span> Products</a></li>
            <li><a id="table" href="/users/logout"  style="font-weight: bold;"><span class="glyphicon glyphicon-log-in"></span> LogOut</a></li>
          </ul>
        </div>
      </nav>

      <h3 style="margin-left:60px;"> <span style="color:royalblue" id="user"><%=username%></span> >Cart</h3>
      

      <div style="margin-left:20px" class="container-fluid main-content">
        
        <div  class="row">
            <div class="col-lg-6">
                    <% useritems.forEach(function(item){ %>
                  <div class="col-md-6   col-centered " id="<%=item.name%>" >
                        <div class="card">
                            <img class="card-img-top image" src="/images/<%=item.name %>.jpg" alt="Cardimage cap">
                            <div class="card-body"  >
                                <table >
                                    <tr>
                                    <td id="itemname" style="font-weight: bold;"> <%=item.name%> </td>
                                        </tr>
                                        <tr>
                                    <td  style=" color: green; "><h4 style="font-weight: bold;" id="<%=item.name%>:cost"><i class="fa fa-inr"></i><%=item.cost%></h4> </td>
                                    </tr>
                                    </table>
                                    <table>
                                    <tr >
                                            <button class="btn btn-danger"  style="font-weight:bold ; color:blue" id="buttAdd"   onclick="subItem(this)">-</button>
                                            <span id="<%=item.name%>:showquantity" class="btn"><%=item.quantity  %></span>
                                            <button class="btn btn-success" style="font-weight:bold ; color:blue ;" id="buttSub"  onclick="addItem(this)">+</button>
                                           <!-- <a href="#" id="buttRem" onclick="remItem(this)" ><i style="color:blue" class="fa fa-trash"></i></a>-->
                                          
                                           <button onclick="remItem(this)"  class="btn" style="background-color:white; margin-left:85px"><span style="font-weight: bold;font-size:20px; color:blue" class="glyphicon glyphicon-trash"></span></button>
                                    </tr>
                                </table>
                
    

                                
                            </div>
                        </div>
                  </div>
                  <% }); %>
              </div>

              <div class="col-lg-1">

              </div>

              <div class="col-lg-4" >
                    <table class="table table-striped " style="margin-top:50px">
                            <thead>
                              <tr>
                                <th>Item Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% useritems.forEach(function(item){ %>
                                    
                                        <div id="T:<%=item.name%>">
                                            <tr id='Tab:<%=item.name%>'>
                                                <td ><%=item.name%></td>
                                                <td>Rs.<%=item.cost%></td>
                                                <td id="<%=item.name%>:tablequantity"><%=item.quantity%></td>
                                                <td style="color:blue ; font-weight:bold" onclick="remItem1(this)">Remove</td>
                                                
                                            </tr>
                                        </div>
                                
                                <% }); %>
                                <tr>
                                    <td><h4 style="font-weight:bold">Total</h4></td>
                                    <td><h4 style="font-weight:bold" id="totalcost"><%=totalcost%></h4></td>
                                    <td><button class="btn btn-primary"  style="font-weight:bold" onclick="cfmorder()">Confirm</button></td>
                                </tr>
                                
                                
                                
                            </tbody>
                          </table>

              </div>
            </div>
        </div>


   

</body>
<script src=""https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js""></script>
<script src="/javascripts/modifyCart.js"></script>


</html>
