    <link rel="icon" type="image/x-icon" href="/icons/barns/favicon.ico">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"/>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <!--link rel="stylesheet" href="/stylesheets/font-awesome.min.css"/-->
</head>

<body >

        
        <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                  <div class="navbar-header">
                    <a class="navbar-brand" href="/">UPV Sales       <span id="user"><%=username%></span></a>
                    
                  </div>
              
                  <ul class="nav navbar-nav navbar-right">
                      
                    <li><a href="/users/showcart"  class="btn"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                    <li><a id="table" href="/users/logout"><span class="glyphicon glyphicon-log-in"></span> LogOut</a></li>
                  </ul>
                </div>
              </nav>


    
    
    <div class="container-fluid main-content">
        
        <div class="row">
            <div class="col-lg-12">
                    <% result.forEach(function(item){ %>
                  <div class="col-md-4   col-centered " id="<%=item.name%>">
                        <div class="card">
                            <img class="card-img-top image" src="/images/<%=item.name %>.jpg" alt="Cardimage cap">
                            <div class="card-body" >
                                <table>
                                    <tr>
                                    <td  style="font-weight: bold;"> <%=item.name%> </td>
                                    <td  style="text-align: right; color: green; font-weight: bold;"><i class="fa fa-rupee"></i><h5 id="<%=item.name%>:cost"><%=item.cost%></h5> </td>
                                    </tr>
                                </table>
                
    
                                <!--a href="#" onclick="dataadd(<%=item.name%>)"class="btn btn-success " role="button" style="margin-top:5px">Add to Cart</a-->
                               <button id="addDataButt"   onclick="storeData(this)" class="btn btn-success "  style="margin-top:5px">Add to Cart</button>
                            </div>
                        </div>
                  </div>
                  <% }); %>
              </div>
            </div>
        </div>

        

        <script src=""https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js""></script>
        <script src="/javascripts/addData.js"></script>

</body>


